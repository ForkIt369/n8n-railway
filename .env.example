# n8n Configuration for Railway Deployment

# Basic Configuration
N8N_PORT=5678
N8N_PROTOCOL=https
NODE_ENV=production

# Database Configuration (SQLite for simplicity, can switch to Postgres)
DB_TYPE=sqlite
DB_SQLITE_DATABASE=/home/node/.n8n/database.sqlite

# Security - IMPORTANT: Generate a unique encryption key
# Run this to generate: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your-encryption-key-here

# Webhook Configuration (Railway will provide the domain)
WEBHOOK_URL=https://your-app.up.railway.app
N8N_HOST=your-app.up.railway.app

# Editor Configuration
N8N_EDITOR_BASE_URL=https://your-app.up.railway.app

# Execution Configuration
EXECUTIONS_MODE=regular
EXECUTIONS_PROCESS=main
GENERIC_TIMEZONE=Europe/Berlin

# Security Settings
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password

# Optional: External Services
# Add your API keys here for services you'll use in workflows
# FAL_AI_API_KEY=your-fal-api-key
# SUPABASE_URL=your-supabase-url
# SUPABASE_ANON_KEY=your-supabase-anon-key

# Performance
N8N_PAYLOAD_SIZE_MAX=16
VUE_APP_MAX_PINNED_DATA_SIZE=16384

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console